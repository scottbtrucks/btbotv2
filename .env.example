# App Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
# Optional: Custom OpenAI API base URL
# OPENAI_BASE_URL=https://your-custom-endpoint.com/v1

# Alternative AI Providers
# OpenRouter Configuration
# OPENROUTER_API_KEY=your_openrouter_key_here
# OPENROUTER_MODEL=google/gemini-2.0-flash-exp:free

# Nano-GPT Configuration
# NANO_GPT_API_KEY=your_nanogpt_key_here
# NANO_GPT_MODEL=o3-mini

# Azure Speech Services (Recommended)
AZURE_TTS_KEY=your_azure_key_here
AZURE_TTS_REGION=eastus
AZURE_STT_KEY=your_azure_key_here
AZURE_STT_REGION=eastus
USE_AZURE_SERVICES=true

# Alternative Voice Services
# VoiceRSS Configuration (Free Alternative)
# VOICERSS_API_KEY=your_voicerss_key_here

# Play.ht Configuration (Paid)
# PLAYHT_API_KEY=your_playht_api_key_here
# PLAYHT_USER_ID=your_playht_user_id_here
# PLAYHT_VOICE_ID=your_playht_voice_id_here

# ElevenLabs Configuration
# ELEVENLABS_API_KEY=your_elevenlabs_api_key_here
# ELEVENLABS_VOICE_ID=your_elevenlabs_voice_id_here

# MCP Server Configuration (for ElevenLabs geo-restriction bypass)
# USE_MCP_PROXY=false
# MCP_SERVER_URL=http://localhost:3002

# Security Configuration
# JWT_SECRET=your_jwt_secret_here
# SESSION_SECRET=your_session_secret_here

# Feature Flags
ENABLE_VOICE_INTERFACE=true
ENABLE_DEBUG_MODE=false
ENABLE_ERROR_REPORTING=true

# Cache Configuration
ENABLE_API_CACHE=true
CACHE_TTL_SECONDS=3600

# Rate Limiting
MAX_REQUESTS_PER_MINUTE=60
MAX_AUDIO_SIZE_MB=10

# Testing Configuration
TEST_USER_EMAIL=test@example.com
TEST_USER_PASSWORD=your_test_password_here